{
  "rules": [
    {
      "filePathMatches": "**/*",
      "rulesPaths": ".ruler/commit-push.md"
    },
    {
      "filePathMatches": "**/*",
      "rulesPaths": ".ruler/ruler-apply.md"
    },
    {
      "filePathMatches": "**/*",
      "rulesPaths": ".ruler/shell-usage.md"
    },
    {
      "filePathMatches": "**/*",
      "rulesPaths": ".ruler/tool-search.md"
    },
    {
      "filePathMatches": "**/*",
      "rulesPaths": ".ruler/workspace-file-references.md"
    }
  ],
  "mcpServers": {
    "XcodeBuildMCP": {
      "command": "npx",
      "args": [
        "-y",
        "xcodebuildmcp@latest"
      ],
      "type": "stdio"
    },
    "Serena": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server"
      ],
      "type": "stdio"
    },
    "Linear": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ],
      "type": "stdio"
    },
    "GitHub": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "https://api.githubcopilot.com/mcp/"
      ],
      "type": "stdio"
    },
    "Figma": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://127.0.0.1:3845/sse"
      ],
      "type": "stdio"
    },
    "Beeper": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-remote",
        "http://localhost:23373/v0/mcp"
      ],
      "type": "stdio"
    },
    "Codex": {
      "command": "codex",
      "args": [
        "mcp"
      ],
      "type": "stdio"
    },
    "ChromeDevtools": {
      "command": "npx",
      "args": [
        "chrome-devtools-mcp@latest"
      ],
      "type": "stdio"
    },
    "Context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "type": "stdio"
    },
    "skillz": {
      "command": "uvx",
      "args": [
        "skillz@latest",
        "/Users/shunkakinoki/ghq/github.com/shunkakinoki/dotagents/.skillz"
      ]
    }
  }
}